#: import SimpleTableLayout kivy.garden.simpletablelayout
#: import player core.gui.ext_character
GridLayout:
    width: 500
    cols: 2
    cols_minimum: {0: self.width*2/5, 1: self.width*3/5}
    CharacterInfoPane:
    TabbedPanel:
        do_default_tab: False
        SkillsTab:
        InventoryTab:
        PowersTab:

#: import App kivy.app
<RPGArmoury@App>:

<CharacterInfoPane@GridLayout>:
    rows: 2
    orientation: 'vertical'
    Label:
        text: 'Character Image\nor\nAbility Scores'
    GridLayout:
        id: 'StatBox'
        rows: 5
        Panel:
            background_color: 1, 0, 0, 0.5
            text: 'Character Name\nLevel, Class'
        Panel:
            background_color: 1, 1, 0, 0.5
            text: player.hp
        Panel:
            background_color: 0, 1, 0, 0.5
            text: player.xp
        Panel:
            background_color: 0, 0, 1, 0.5
            text: player.hitdice
        GridLayout:
            cols: 3
            Label:
            Panel:
                background_color: 1, 0, 1, 0.5
                text: player.ac
            Panel:
                background_color: 0, 1, 1, 0.5
                text: 'Condition\nSymbols'

<SkillsTab@TabbedPanelItem>:
    text: 'Skills'
    BoxLayout:
        Table:
            data: player.skills
            adapter: ListAdapter(data=self.data, cls=ListItemButton)
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Miscelaneous Trackers'
            Label:
                text: 'Proficiencies'
            Label:
                text: 'Languages'
            Label:
                text: 'Background'
            Label:
                text: 'Conditions'

#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
<InventoryTab@TabbedPanelItem>:
    text: 'Inventory'
    BoxLayout:
        orientation: 'vertical'
        Table:
            data: player.inventory
            adapter: ListAdapter(data=self.data, cls=ListItemButton)
        Panel:
            background_color: 0.3, 0.3, 0.3, 0.5
            text: 'Selected Item Information\n(Conditionally Visible)'

<Table@ListView>:
    data: ['Placeholder', 'Strings', 'For', 'Empty', 'Tables']

<ListItemButton>:
    deselected_color: 0.4, 0.4, 0,4, 1
    selected_color: 0.7, 0.7, 0.7, 1

<PowersTab@TabbedPanelItem>:
    text: 'Powers'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Spell Slots'
        Label:
            text: 'Trackers (Powers Only)'
        Label:
            text: 'Racial Abilities'
        Label:
            text: 'Class Abilities'
        Label:
            text: 'Prepared Spells'
        Label:
            text: 'Weapon Attacks'
